{
  "name": "Meet Tools",
  "version": "1.5.2",
  "description": "Semi-automatic Google Meet management",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "storage",
    "tabCapture",
    "downloads"
  ],
  "background": {
    "scripts": ["background.js", "recorderHandler.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*"
      ],
      "js": [
        "content.js",
        "captions.js",
        "recorder.js"
      ],
      "run_at": "document_end"
    }
  ],
  "page_action": {},
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
