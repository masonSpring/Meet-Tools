{
  "name": "Meet Tools",
  "version": "1.3",
  "description": "Semi-automatic Google Meet management",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*"
      ],
      "js": [
        "content.js",
        "captions.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
